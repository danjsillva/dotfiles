#synaptics settings
#enable horizontal two finger scrolling
exec_always synclient HorizTwoFingerScroll=1
#enable natural scrolling
exec_always synclient VertScrollDelta=-400
exec_always synclient HorizScrollDelta=-400
#disable scrolling using edge of touchpad
exec_always synclient VertEdgeScroll=0
#enable middle click with 3 finger tap
exec_always synclient TapButton3=2
exec_always synclient MaxTapTime=100
#disable right click through clicking on the right bottom side of touchpad
exec_always synclient RightButtonAreaLeft=0
exec_always synclient RightButtonAreaTop=0
exec_always synclient CoastingSpeed=5
exec_always synclient CoastingFriction=35

