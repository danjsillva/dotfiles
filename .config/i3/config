#create binds for media buttons (volup, voldown, play, pause, mute, next, previous)
bindsym XF86AudioRaiseVolume exec --no-startup-id "pactl set-sink-volume 0 +5%; pactl set-sink-volume bluez_sink.04_FE_A1_5B_1D_CB.a2dp_sink +5%;"
bindsym XF86AudioLowerVolume exec --no-startup-id "pactl set-sink-volume 0 -5%; pactl set-sink-volume 1 -5%; pactl set-sink-volume bluez_sink.04_FE_A1_5B_1D_CB.a2dp_sink -5%;"
bindsym XF86AudioMute exec --no-startup-id "pactl set-sink-mute 0 toggle; pactl set-sink-mute bluez_sink.04_FE_A1_5B_1D_CB.a2dp_sink toggle;"
bindsym XF86AudioPlay exec playerctl play-pause
bindsym XF86AudioPause exec playerctl pause
bindsym XF86AudioNext exec playerctl next
bindsym XF86AudioPrev exec playerctl previous
